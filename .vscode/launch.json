	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Deno",
			"type": "pwa-node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "deno",
			"program": "mod.ts",
			"runtimeArgs": [
				"run",
				"--inspect-brk",
				"--allow-all"
			],
			"outputCapture": "std",
			"attachSimplePort": 9229
		},
		{
			"name": "Debug Deno Build",
			"type": "pwa-node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "deno",
			"program": "build.ts",
			"runtimeArgs": [
				"run",
				"--inspect-brk",
				"--allow-all"
			],
			"outputCapture": "std",
			"attachSimplePort": 9229
		}
	]
}
